<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Activities.StudentDetailActivity"
            android:orientation="vertical">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="@drawable/color"
        >
            <ImageView
                    android:id="@+id/backArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backarrow"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
            />
            <androidx.cardview.widget.CardView android:layout_width="100dp"
                                               android:layout_height="100dp"
                                               android:layout_marginStart="50dp"
                                               android:layout_marginTop="70dp"
                                               app:cardCornerRadius="100dp"

            >

                <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                           android:src="@drawable/msp"/>
            </androidx.cardview.widget.CardView>


            <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Mg Myo Set Paing"
                      android:textColor="#fff"
                      android:textSize="20sp"
                      android:layout_marginStart="180dp"
                      android:layout_marginTop="100dp"/>

            <TextView
                    android:id="@+id/major"
                    android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Mobility"
                      android:textColor="#fff"
                      android:textSize="20sp"
                      android:layout_marginStart="180dp"
                      android:layout_marginTop="130dp"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical"/>


        </RelativeLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="80dp"
                      android:orientation="horizontal"

        >
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/work"
                       android:layout_marginTop="20dp"
                       android:layout_marginStart="10dp"/>
            <LinearLayout

                    android:layout_width="match_parent"
                          android:layout_height="80dp"
                          android:orientation="vertical"
                          android:layout_marginStart="5dp"
            >
                <TextView
                        android:id="@+id/work"
                        android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="30dp"
                          android:layout_marginStart="20dp"
                          android:textSize="20sp"
                          android:textColor="#751414"
                          android:text="Android Developer"/>
                <View android:layout_width="320dp"
                      android:layout_height="1dp"
                      android:background="@drawable/straight"
                      android:layout_marginTop="10dp"
                      android:layout_marginStart="20dp"

                />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="80dp"
                      android:orientation="horizontal"
        >
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/office"
                       android:layout_marginTop="20dp"
                       android:layout_marginStart="20dp"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="80dp"
                          android:orientation="vertical"
                          android:layout_marginStart="10dp"
            >
                <TextView
                        android:id="@+id/office"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="20dp"
                        android:textSize="20sp"
                        android:textColor="#751414"
                        android:text="Ace Plus Solution Co.Ltd"
                />

                <View android:layout_width="320dp"
                      android:layout_height="1dp"
                      android:background="@drawable/straight"
                      android:layout_marginTop="10dp"
                      android:layout_marginStart="20dp"

                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="80dp"
                      android:orientation="horizontal"
        >
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/address"
                       android:layout_marginTop="20dp"
                       android:layout_marginStart="15dp"
            />
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="80dp"
                          android:orientation="vertical"
                          android:layout_marginStart="10dp"
            >
                <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="30dp"
                          android:layout_marginStart="20dp"
                          android:textSize="20sp"
                          android:textColor="#751414"
                          android:text="Pantanaw St,Sanchaung"/>
                <View android:layout_width="320dp"
                      android:layout_height="1dp"
                      android:background="@drawable/straight"
                      android:layout_marginTop="10dp"
                      android:layout_marginStart="20dp"

                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="80dp"
                      android:orientation="horizontal"
        >
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/birthday"
                       android:layout_marginTop="20dp"
                       android:layout_marginStart="20dp"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="80dp"
                          android:orientation="vertical"
                          android:layout_marginStart="10dp"
            >
                <TextView
                        android:id="@+id/birthday"
                        android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="30dp"
                          android:layout_marginStart="20dp"
                          android:textSize="20sp"
                          android:textColor="#751414"
                          android:text="1/2/1996"/>
                <View android:layout_width="320dp"
                      android:layout_height="1dp"
                      android:background="@drawable/straight"
                      android:layout_marginTop="10dp"
                      android:layout_marginStart="20dp"

                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="80dp"
                      android:orientation="horizontal"
        >
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/grade"
                       android:layout_marginTop="20dp"
                       android:layout_marginStart="20dp"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="80dp"
                          android:orientation="vertical"
                          android:layout_marginStart="10dp"
            >
                <TextView
                        android:id="@+id/grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="20dp"
                        android:textSize="20sp"
                        android:textColor="#751414"
                        android:text="Grade A"/>
                <View android:layout_width="320dp"
                      android:layout_height="1dp"
                      android:background="@drawable/straight"
                      android:layout_marginTop="10dp"
                      android:layout_marginStart="20dp"

                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="80dp"
                      android:orientation="horizontal"
        >
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/phone"
                       android:layout_marginTop="20dp"
                       android:layout_marginStart="20dp"/>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="80dp"
                          android:orientation="vertical"
                          android:layout_marginStart="5dp"
            >
                <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="20dp"
                        android:textSize="20sp"
                        android:textColor="#751414"
                        android:text="+95951104661"/>
                <View android:layout_width="320dp"
                      android:layout_height="1dp"
                      android:background="@drawable/straight"
                      android:layout_marginTop="10dp"
                      android:layout_marginStart="20dp"

                />

            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>